#container{
	width: 100%;
	height: 1200rpx;
}
#top{
  width: 100%;
  height: 12%;
  text-align: center;
}
#month{
  font-size: 50rpx;
  height: 45%;
}
#year{
  font-size: 25rpx;
  height: 25%;
  color: gray;
}
#showWeek{
  height: 25%;
}
#body{
  width: 100%;
  height: 80%;
}
#footer{
  width: 100%;
  height: 7.5%;
}
.week{
  float: left;
	width: 14.2%; 
	text-align: center;
  font-size: 20rpx;
  padding-top: 2%;
}
.row{
  border-top-style: solid;
  border-top-color: gray;
  border-top-width: 2rpx;
  height: 20%;
  width: 100%;
}
.smallrow{
  border-top-style: solid;
  border-top-color: gray;
  border-top-width: 2rpx;
  height: 16.67%;
  width: 100%;
}
.day{
  padding-top: 2rpx;
  float: left;
  width: 14.2%;
  height: 100%;
  text-align: center;
  font-size: 23rpx;
}
#footer{
  border-top-style: solid;
  border-top-color: gray;
  border-top-width: 2rpx;
}
.choose{
  width: 30%;
  float: left;
  margin-top: 2%;
  margin-left: 14%;
  text-align: center;
  font-size: 33rpx;
}
#agenda{
  color: #22A7F6;
}
.noday{
  float: left;
  width: 14.2%;
  height: 100%;
  text-align: center;
  font-size: 30rpx;
  color: gray !important;
}
.todayb{
	width: 35rpx;
  height: 16%;
	border-radius: 50%;
	text-align: center;
	color: #fff;
	background-color: #22A7F6;
	margin: 0 auto;
}
.todaya{
  width: 35rpx;
  height: 16%;
	border-radius: 50%;
	text-align: center;
	color: #fff;
	background-color: red;
	margin: 0 auto;
}